<div style="width: 80%;margin:0 auto;">
	<h1>Crear articulo</h1>
	<%= form_for(@geolocation) do |f| %>

	<!--Cuantos errores impidieron que el articulo se guardara -->
		<% @geolocation.errors.full_messages.each do |message| %>
		<div class="be-errormessage red top-space">
			* <%= message %>
		</div>
		<%end%>



		<div class="field">
			<%= f.text_field :title, placeholder: "Titulo", class:"form-control" %>
		</div>

		<div class="field">
			<%= f.text_area :body, placeholder: "Escribe aqui", style:"height:250px;", class:"form-control" %>
		</div>

		<div class="field">
			<%= f.submit "Guardar", class:"btn-guardar be-colorbtn white " %>
		</div>


	<% end %>




</div>


